<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.binmetadata.BinMetadataFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/enter_a_bin"
        android:textSize="18sp"
        tools:visibility="visible" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/bin_hint"
            app:endIconMode="clear_text"
            app:errorEnabled="true">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/ac_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="2">

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="@string/general"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginEnd="10dp"
                    android:text="@string/scheme_network" />

                <TextView
                    android:id="@+id/text_view_scheme"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="Visa" />

                <TextView android:text="@string/brand" />

                <TextView
                    android:id="@+id/text_view_brand"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="Visa/Dankort" />

                <TextView android:text="@string/type" />

                <TextView
                    android:id="@+id/text_view_type"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="Debit" />

                <TextView android:text="@string/prepaid" />

                <TextView
                    android:id="@+id/text_view_prepaid"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="No" />

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="@string/card_number"
                    android:textStyle="bold" />

                <TextView android:text="@string/length" />

                <TextView
                    android:id="@+id/text_view_number_length"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="16" />

                <TextView android:text="@string/luhn" />

                <TextView
                    android:id="@+id/text_view_number_luhn"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="Yes" />

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="@string/country"
                    android:textStyle="bold" />

                <TextView android:text="@string/name" />

                <TextView
                    android:id="@+id/text_view_country_name"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="Denmark" />

                <TextView android:text="@string/flag" />

                <TextView
                    android:id="@+id/text_view_country_flag"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="ðŸ‡©ðŸ‡°" />

                <TextView android:text="@string/latitude" />

                <TextView
                    android:id="@+id/text_view_country_latitude"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="56" />

                <TextView android:text="@string/longitude" />

                <TextView
                    android:id="@+id/text_view_country_longitude"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="10" />

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="@string/bank"
                    android:textStyle="bold" />

                <TextView android:text="@string/name" />

                <TextView
                    android:id="@+id/text_view_bank_name"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="Jyske Bank" />

                <TextView android:text="@string/city" />

                <TextView
                    android:id="@+id/text_view_bank_city"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="HjÃ¸rring" />

                <TextView android:text="@string/url" />

                <TextView
                    android:id="@+id/text_view_bank_url"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="www.jyskebank.dk" />

                <TextView android:text="@string/phone" />

                <TextView
                    android:id="@+id/text_view_bank_phone"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:maxWidth="180dp"
                    tools:text="+4589893300" />
            </GridLayout>
        </ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
